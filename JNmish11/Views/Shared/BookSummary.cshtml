@{
}

@model Book

<div class="card m-1 p-1">
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <ul class="list-unstyled">
            <li><strong>Author:</strong> @Model.Author</li>
            <li><strong>Publisher:</strong> @Model.Publisher</li>
            <li><strong>ISBN:</strong> @Model.Isbn</li>
            <li><strong>Classification:</strong> @Model.Classification</li>
            <li><strong>Category:</strong> @Model.Category</li>
            <li><strong>Page Count:</strong> @Model.PageCount</li>
            <li><strong>Price: </strong>$@Model.Price</li>
        </ul>

        <form id=@Model.BookId method="post" asp-page="/Cart">
            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <button type="submit" class="btn-outline-success btn-sm float-end">Add to Cart</button>
        </form>
    </div>
</div>